# Окружение для продакшена (боевого сервера)
ENVIRONMENT=prod
APP_NAME=Skatinov LeadLab
DEBUG=false

# База данных (в prod используется настоящая PostgreSQL на удалённом сервере)
# ВАЖНО: реальный URL в .env.prod должен быть защищённым!
DATABASE_URL=postgresql://user:password@db.example.com:5432/skatinov_prod

# API
API_TITLE=Skatinov LeadLab API
API_VERSION=0.1.0

# Логирование (в prod только важные логи)
LOG_LEVEL=WARNING

# Безопасность
SECRET_KEY=your-secret-key-here-change-in-prod
ALLOWED_HOSTS=api.skatinov.com,www.skatinov.com
